{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },    
    "plugins": [
        "react",
        "prettier"
    ],
    "extends": [
        "eslint:recommended",
        "airbnb",
        "prettier"
    ],
    "rules": {
        "react/jsx-uses-react": 0,
        "react/react-in-jsx-scope": 0,
        "react/jsx-filename-extension": 0,
        "react/prop-types": 0,
        "import/no-extraneous-dependencies": 0,
        "no-unused-expressions": ["error", { "allowTernary": true }],
        "jsx-a11y/label-has-associated-control": 0
    }
}
